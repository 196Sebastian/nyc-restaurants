    <style name="Theme.NYCRestaurants" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_text_color</item>
        <item name="colorSecondaryVariant">@color/secondary_text_color</item>
